<% layout('layouts/boilerplate') %>


    <div>
        <h1 class="text-center mb-2">
            <%= heading %>
        </h1>
        <h4 class="text-center mb-4">Top Music Videos</h4>
    </div>

    <ul class="p-0">
        <% for(let song of songs){ %>

            <div class="card mb-2 ">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= song.image %>" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title mb-2 mt-2">
                                <%= song.title %>
                            </h3>
                            <h4 class="card-title text-muted mb-2 mt-2">
                                <%= song.channelTitle %>
                            </h4>
                            <a class="btn btn-primary" href="/artists/<%=song.artist_name%>/<%=song._id%>">view </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>