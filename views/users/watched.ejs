<% layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-1 d-flex align-items-start justify-content-center">
        <a class="btn btn-outline-secondary btn-lg px-2 py-0" href="/profile"><-</a>
    </div>
    <div class="col-11">
        <form action="/artists/research/<%=artist_name%>" class="text-center" method="post">
            <button class='btn text-center p-0' type="submit"><h1 class="text-center mb-2 "><%=artist_name%></h1></button> 
            <h5 class="text-center mb-4">Watched Songs</h5>  
        </form>
    </div>
</div>




<div class="d-flex flex-column ">
    
    <% if(watched.length) {%>
        <ul class="p-0">
            <% for(let song of watched){ %>
                        <div class="card mb-3">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="<%= song.image %>" class="img-fluid" alt="">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h3 class="card-title mb-2 mt-2">
                                            <%= song.title %>
                                        </h3>
                                        <h4 class="card-title text-muted mb-2 mt-2">
                                            <%= song.channelTitle %>
                                        </h4>
                                        <form action="/artists/<%=song.artist_name%>/watch/<%=song.videoId%>" method="post">
                                            <button class="btn btn-primary" type="submit">Watch Video</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
        </ul>  
        
        <% }else{ %>  
            <div class="text-center">
                <h4>So Empty!!</h4>
                <form action="/">
                    <button class="btn btn-primary">Search</button>
                </form>
            </div>
        <% } %>
</div>